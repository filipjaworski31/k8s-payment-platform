# ============================================
# AWS & Project Configuration
# ============================================

aws_region  = "us-east-1"
environment = "dev"
project_name = "finpay-payment-platform"

# ============================================
# ECR Repository Configuration
# ============================================

image_tag_mutability = "MUTABLE"  # Use IMMUTABLE for production

# ============================================
# Security Configuration
# ============================================

scan_on_push = true
enable_encryption = true
enable_enhanced_scanning = false  # Enable for production (additional cost)

# Cross-Account Access (uncomment and configure if needed)
# allowed_principals = [
#   "arn:aws:iam::123456789012:root",  # Production account
#   "arn:aws:iam::987654321098:user/cicd-user"
# ]

# Custom KMS Key (uncomment if using custom key)
# kms_key_arn = "arn:aws:kms:us-east-1:123456789012:key/12345678-1234-1234-1234-123456789012"

# ============================================
# Lifecycle Policy Configuration
# ============================================

image_retention_count = 10  # Keep last 10 tagged images
untagged_image_retention_days = 7  # Remove untagged after 7 days

# ============================================
# Monitoring Configuration
# ============================================

enable_cloudwatch_logs = true
log_retention_days = 30

# Optional: Enable for production monitoring
enable_vulnerability_alarms = false  # Set to true for production
vulnerability_alarm_threshold = 5

enable_cloudwatch_dashboard = false  # Set to true if needed
